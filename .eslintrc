{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "eqeqeq": [
      "warn",
      "smart"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true 
      }
    ],
    "no-unused-vars": "warn",
    "no-var": "error",
    "no-console": "off",
    "no-trailing-spaces": [
      "warn", 
      {
        "ignoreComments": true
      }
    ]
  }
}